<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="maskType" format="enum">
        <enum name="date" value="0" />
        <enum name="phone" value="1" />
        <enum name="ssn" value="2" />
        <enum name="currency" value="3" />
        <enum name="custom" value="4" />
        <enum name="static_text" value="5" />
        <enum name="credit_card" value="6" />
        <enum name="date_mm_yyyy" value="7" />
        <enum name="iban" value="8" />
        <enum name="tc_id" value="9" />
    </attr>
    <attr name="decimalSeparator" format="string" />
    <attr name="groupingSeparator" format="string" />
    <attr name="maskPattern" format="string" />
    <attr name="returnPattern" format="string" />
    <attr name="currencyDecimalLimit" format="integer" />
    <attr name="currencyPrefix" format="string" />
    <attr name="currencySuffix" format="string" />

    <declare-styleable name="MaskedInputLayout">
        <attr name="android:text" />
        <attr name="android:hint" />
        <attr name="android:inputType" />
        <attr name="android:maxLength" />

        <attr name="textInputLayoutStyle" format="reference" />
        <attr name="textInputEditTextStyle" format="reference" />
        <attr name="textInputErrorStyle" format="reference" />
        <attr name="textInputHelperStyle" format="reference" />
        <attr name="endIconStyle" format="reference" />

        <attr name="error" format="string" />
        <attr name="helper" format="string" />

        <attr name="currencyDecimalLimit" />
        <attr name="currencyPrefix" />
        <attr name="currencySuffix" />
        <attr name="decimalSeparator" />
        <attr name="groupingSeparator" />
        <attr name="maskPattern" />
        <attr name="maskType" />
        <attr name="returnPattern" />
    </declare-styleable>

</resources>
